<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:pageline="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:id="@+id/page_linear"
              android:descendantFocusability="blocksDescendants"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <com.example.miuiweather.PageLine
        android:id="@+id/page_line"
        pageline:total="20"
        pageline:yestotal="30"
        pageline:montotal="15"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>
    <TextView
        android:text="今天"
        android:textSize="10sp"
        android:gravity="center"
        android:id="@+id/page_tv_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <ImageView
        android:layout_gravity="center"
        android:id="@+id/page_image"
        android:layout_width="wrap_content"
        android:layout_height="30dp"/>
    <TextView
        android:gravity="center"
        android:text="20/30"
        android:textSize="12sp"
        android:id="@+id/page_tv_temp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>